.touxiang {
  width: 100px;
  height: 100px;
  border-radius: 80rpx;
  position: absolute;
  left: 275rpx;
  top: 200rpx;
  z-index: 1;
}

.title {
  /*  */
  position: relative;
  display: block;
  background: #55ab9b;
  width: 750rpx;
  height: 300rpx;
}

.touxiang_container {
  height: 420rpx;
}

.name {
  display: block;
  height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
}

.sex_grade {
  display: block;
  height: 50rpx;
  text-align: center;
  font-size: 30rpx;
}

.info_item {
  display: block;
  height: 80rpx;
}

.item_name {
  display:inline-block;
  width:30%;
  padding:20rpx;
  color:grey;
}

.item_value{
  display:inline-block;
  text-align: left;
  width:42%;
   padding:20rpx;
  
}

.item_container {
  padding:30rpx,40rpx;
  background-color:#def1f1;
  margin:40rpx;
  border-radius: 15rpx;
  font-size:30rpx;
}

.history_bar {
  font-size: 35rpx;
  border-left: 20rpx solid #61bfad;
  margin-left: 5rpx;
  font-weight: bold;
  margin-bottom:30rpx;
}

.history {
  display:block;
  height:200rpx;
  background-color: #def1f1;
  text-align: center;
  margin:5rpx;
  color:#55ab9b;
  font-size:50rpx;
  line-height: 50rpx;
  padding:30rpx;
}